#include<stdio.h>
struct cricketer
{
int runs,wickets;
char name[25];
}player[11];
 
void main()
{
int i,n;
printf("Enter the number of cricket players to enter\n");
scanf("%d",&n);
printf("Enter player statistics as , runs , wickets\n");
for(i=0;i<n;i++)
{scanf("%s %d %d",player[i].name,&player[i].runs,&player[i].wickets);
}
printf("\nname\t\truns\t\twickets\n");
for(i=0;i<n;i++)
{
printf("%s\t\t%d\t\t%d\n",player[i].name,player[i].runs,player[i].wickets);
}
}
